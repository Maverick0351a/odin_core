# ODIN Protocol Environment Configuration
# Copy this file to .env and customize for your environment

# AI Service Configuration
ODIN_GEMINI_PROJECT_ID=clarifyai-466505
ODIN_GEMINI_LOCATION=us-central1
# ODIN_OPENAI_API_KEY=your-openai-key-here

# Conversation Settings
ODIN_MAX_CONVERSATION_TURNS=50
ODIN_DEFAULT_TEMPERATURE=0.7

# Self-Reflection Settings
ODIN_MEDIATOR_CONFIDENCE_THRESHOLD=0.7
ODIN_SEMANTIC_DRIFT_THRESHOLD=0.3
ODIN_MAX_REFLECTION_ITERATIONS=3

# File Storage Settings
ODIN_LOGS_DIRECTORY=logs
ODIN_REFLECTION_LOG_FILE=logs/reflections.jsonl

# API Settings
ODIN_API_HOST=127.0.0.1
ODIN_API_PORT=8000
ODIN_API_RELOAD=false

# Rate Limiting
ODIN_RATE_LIMIT_REQUESTS=100
ODIN_RATE_LIMIT_WINDOW=60

# Security Settings
ODIN_ENABLE_CORS=true
ODIN_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:8000
ODIN_MAX_MESSAGE_SIZE=1048576

# Monitoring Settings
ODIN_ENABLE_METRICS=false
ODIN_LOG_LEVEL=INFO

# Development Settings
ODIN_DEBUG_MODE=false
ODIN_MOCK_AI_RESPONSES=false
